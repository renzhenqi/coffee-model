@import '../../Components/weui-wxss/dist/style/weui.wxss';


page{
    background-color: #FFFFFF;
    height: 100%;
}

.vtabs-content-item {
    width: 100%;
    height: 1650px;
    /* height: auto; */
    /* min-height: 100vh; */
    box-sizing: border-box;
    border-bottom: 1px solid #ccc;
    padding-bottom: 20px;    
}


page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.weui-cell_example:before{
    left:52px;
}
.product {
	display: flex;
	justify-content: space-between;
	width: 100%;
	padding: 0 20rpx;
	box-sizing: border-box;
	margin-bottom: 30rpx;
}

.product image {
	width: 200rpx;
}

.info {
	display: flex;
	flex-direction: column;
	width: 70%;
	margin-left: 30rpx;
	/* align-items: flex-end; */
	justify-content: space-between;
}

.bottom {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.type {
	display: flex;
	flex-direction: column;
	justify-content: flex-end;

}

.word {
	display: flex;
	align-items: center;
	justify-content: center;
	color: #ffffff;
	border: #000000 1rpx solid;
	background: #000000;
	height: 30rpx;
	width: 140rpx;
	border-radius: 30rpx;
	padding: 15rpx 0;
	font-size: smaller;
}
